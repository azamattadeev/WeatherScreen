<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/almostWhite</item>
        <item name="colorPrimaryDark">@color/lilyWhite</item>
        <item name="colorOnPrimary">@color/doveGray</item>
        <item name="color_on_primary_second">@color/malibuBlue</item>
        <item name="navigation_bar_color">@color/white</item>
    </style>

    <!-- Dark application theme. -->
    <style name="DarkAppTheme" parent="Theme.AppCompat.DayNight">
<!--        <item name="colorPrimary">@color/white</item>-->
<!--        <item name="colorPrimaryDark">@color/lilyWhite</item>-->
<!--        <item name="colorOnBackground">@color/doveGray</item>-->
<!--        <item name="colorOnPrimary">@color/mineShaftGray</item>-->
<!--        <item name="color_on_primary_second">@color/royalBlue</item>-->
    </style>

    <style name="screen_main_btn_style">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    
    <style name="screen_main_text_values_on_details_panel_style">
        <item name="android:textSize">28sp</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/color_on_primary_second</item>
    </style>

    <style name="screen_main_labels_on_details_panel_style">
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

</resources>